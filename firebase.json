{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/slack",
        "destination": "https://join.slack.com/t/bedstuystrong/shared_invite/zt-cw1qom82-~O8LK_j6F_r86OeSbhoM3w",
        "type": 302
      }
    ],
    "headers": [
      {
        "source": "/twilio",
        "headers": [
          {
            "key": "Content-Security-Policy",
            "value": "frame-ancestors https://flex.twilio.com http://localhost:3000"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    }
  }
}
